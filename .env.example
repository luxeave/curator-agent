# ==========================================
# Curator Agent Configuration
# ==========================================
# Copy this file to .env and fill in the values.
# Bun automatically loads .env files at runtime.

# ==========================================
# Workspace Settings
# ==========================================

# Root directory for the notes workspace
# Default: ./notes (relative to current working directory)
NOTE_WORKSPACE_ROOT=./notes

# ==========================================
# LLM Provider Configuration
# ==========================================

# LLM provider to use for note categorization
# Supported values: "openai", "google"
# Default: "openai"
LLM_PROVIDER=openai

# AI model to use for categorization
# Defaults depend on the provider:
#   - OpenAI: "gpt-4o"
#   - Google: "gemini-1.5-flash"
# You can specify any model supported by your chosen provider.
AI_MODEL=gpt-4o

# ==========================================
# Provider API Keys
# ==========================================

# OpenAI API Key (required when LLM_PROVIDER=openai)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google AI API Key (required when LLM_PROVIDER=google)
# Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your-google-api-key-here

# ==========================================
# Debug Settings
# ==========================================

# Enable debug logging
# Set to "true" or "1" to enable verbose logging
DEBUG=false

